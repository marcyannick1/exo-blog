{% extends 'base.html.twig' %}

{% block title %}
	{{article.titre}}
{% endblock %}

{% block body %}
	<style>
		.actions {
			display: flex;
			gap: 5px;
		}
		.date {
			font-size: 0.8em;
			color: gainsboro;
		}
		.auteur {
			font-size: 0.8em;
			color: gray;
		}
		h2 {
			margin-bottom: 0
		}
		.comment{
			margin-bottom: 0
		}
	</style>
	<h2>{{article.titre}}</h2>
	<span class="auteur">{{ article.auteur.nom ~ " " ~ article.auteur.prenom}}</span>
	<br>
	<span class="date">{{ article.DateDeParution ? "Publi√© le " ~ article.DateDeParution|date('Y-m-d H:i:s') : "Cr√©er le " ~ article.DateDeCreation|date('Y-m-d H:i:s') }}</span>
	{% if is_granted('ROLE_ADMIN') %}
		<div class="actions">
			<a href="{{ path('app_articles_edit', {'id': article.id}) }}">Modifier l'articleüñãÔ∏è</a>
			{{ include('articles/_delete_form.html.twig') }}
		</div>
	{% endif %}
	<p>{{article.contenu}}</p>

	{% if app.user %}
		<a href="{{ path('app_articles_comment', {'id': article.id}) }}">Commenter l'articleüí¨</a>
	{% endif %}

	<h2>Commentaires:</h2>
	{% for commentaire in commentaires %}
		<div>
			<p class="comment">{{commentaire.commentaire}}</p>
			<span class="auteur">{{ commentaire.auteur.nom ~ " " ~ commentaire.auteur.prenom}}</span>
			<br>
			<span class="date">{{ commentaire.DateDePublication|date('Y-m-d H:i:s') }}</span>
		</div>
	{% endfor %}
{% endblock %}
