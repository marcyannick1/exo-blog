{% extends 'base.html.twig' %}

{% block title %}Article
{% endblock %}

{% block body %}
	<h1>Article</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ article.id }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ article.Titre }}</td>
			</tr>
			<tr>
				<th>Contenu</th>
				<td>{{ article.Contenu }}</td>
			</tr>
			<tr>
				<th>Date_de_creation</th>
				<td>{{ article.DateDeCreation ? article.DateDeCreation|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Etat</th>
				<td>{{ article.Etat }}</td>
			</tr>
			<tr>
				<th>Date_de_parution</th>
				<td>{{ article.DateDeParution ? article.DateDeParution|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('app_articles_edit', {'id': article.id}) }}">edit</a>
	{% endif %}

	{% if app.user %}
		<a href="{{ path('app_articles_comment', {'id': article.id}) }}">comment</a>
	{% endif %}


	{% if is_granted('ROLE_ADMIN') %}
		{{ include('articles/_delete_form.html.twig') }}
	{% endif %}

	<h2>Commentaires:</h2>
	{% for commentaire in commentaires %}
		<p>{{commentaire.commentaire}}</p>
	{% endfor %}
{% endblock %}
