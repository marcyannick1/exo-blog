{% extends 'base.html.twig' %}

{% block title %}{{categorie.titre}}
{% endblock %}

{% block body %}
	<style>
		.actions{
			display: flex;
			gap: 5px;
		}
		.articles {
			margin-top: 1.5em;
			display: flex;
			flex-direction: column;
			gap: 1em
		}
		.article {
			display: flex;
			flex-direction: column;
		}
		.article .categorie {
			color: gray;
			font-size: 0.8em
		}
		.article .titre {
			margin: 0;
		}
		.article .auteur {
			font-size: 0.7em;
			color: gray
		}
		.article .date {
			font-size: 0.7em;
			color: gainsboro
		}
	</style>
	<h2>Cat√©gorie
		{{ categorie.titre }}</h2>
	<div class="actions">
		{% if is_granted('ROLE_ADMIN') %}
			<a href={{path("app_categories_edit", {id: categorie.id} )}}>Modifier la cat√©gorieüñãÔ∏è</a>
			{{ include('categories/_delete_form.html.twig') }}
		{% endif %}
	</div>
	<div class="articles">
	{% for article in articles %}
		<div class="article">
			<span class="categorie">{{article.categorie.titre}}</span>
			<h3 class="titre">
				<a class="titre" href={{path("app_articles_show", {id : article.id} )}}>
					{{article.titre}}
					<a/>
				</h3>
				<span class="auteur">{{article.auteur.nom}}
